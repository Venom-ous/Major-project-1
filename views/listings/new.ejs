<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Create new Listing</h3>
                <form method="POST" action="/listings">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</Title></label>
                        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image link</Title></label>
                        <input name="listing[image]" type="text" class="form-control" placeholder="Enter img URL/Link"/>
                    </div>
                    <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</Title></label>
                        <input name="listing[price]" type="number" class="form-control" placeholder="1200" />
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">country</Title></label>
                        <input name="listing[country]" type="text" class="form-control" placeholder="India"/>
                    </div>
                    </div>
                    <div>
                        <label for="Location" class="form-label">Location</Title></label>
                        <input name="listing[location]" type="text" class="form-control" placeholder="UK" />
                    </div>

                    <button class="btn btn-dark add-btn mt-3">Submit</button>

                </form>
            </div>
        </div>

        <script src="/js/script.js"></script>
    </body>